{
  "name": "@flamrdevs/package",
  "version": "0.0.1",
  "description": "package",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.modern.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.modern.mjs"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "require": "./dist/lite.js",
      "default": "./dist/lite.modern.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "release": "release-it",
    "test:dev": "vitest --ui",
    "test:prod": "vitest run",
    "test": "yarn run test:prod",
    "watch:prod": "microbundle watch src/{index,lite}.ts --format modern,cjs",
    "watch:dev": "microbundle watch src/{index,lite}.ts --format modern,cjs --compress false",
    "watch": "concurrently \"yarn run watch:dev\" \"yarn run test:dev\"",
    "dev": "yarn run watch",
    "build:prod": "microbundle build src/{index,lite}.ts --format modern,cjs --sourcemap false",
    "build:dev": "microbundle build src/{index,lite}.ts --format modern,cjs --sourcemap false --compress false",
    "build": "yarn run clean && yarn run test && yarn run build:prod"
  },
  "repository": "https://github.com/flamrdevs/package.git",
  "author": "flamrdevs <flamrdevs@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "dayjs": "^1.11.5",
    "nanoid": "^4.0.0"
  },
  "devDependencies": {
    "@vitest/ui": "^0.23.4",
    "concurrently": "^7.4.0",
    "microbundle": "^0.15.1",
    "release-it": "^15.4.2",
    "rimraf": "^3.0.2",
    "vitest": "^0.23.4"
  }
}
